<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <com.example.thriftwears.components.Title
        android:id="@+id/shoppingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/shoppingHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        >

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/lightGrey"
            android:layout_gravity="center"
            android:contentDescription="@string/cart"
            android:src="@drawable/home"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:text="Home"
                android:textColor="@color/black"
                android:textStyle="normal"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:textColor="@color/gray_400"
                android:text="View all listed items"
                android:textStyle="normal"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/shoppingSaved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        >

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/lightGrey"
            android:layout_gravity="center"
            android:contentDescription="@string/cart"
            android:src="@drawable/love"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:text="Saved"
                android:textColor="@color/black"
                android:textStyle="normal"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:textColor="@color/gray_400"
                android:text="Keep tabs on your preferred items"
                android:textStyle="normal"/>
        </LinearLayout>

    </LinearLayout>

    <com.example.thriftwears.components.Title
        android:id="@+id/shortCutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/shortCutSelling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="2dp"
        android:layout_gravity="center"
        >

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/lightGrey"
            android:layout_gravity="center"
            android:contentDescription="@string/cart"
            android:src="@drawable/upload"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Selling"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

    </LinearLayout>

    <com.example.thriftwears.components.Title
        android:id="@+id/accountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/accountPayment"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Payment Methods"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/accountSettings"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Settings"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:textStyle="normal"/>


</LinearLayout>